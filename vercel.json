{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "^/(.*\\.(?:js|css|png|jpg|jpeg|svg|ico|json))$", "headers": { "cache-control": "public, max-age=31536000, immutable" }, "dest": "/$1" },
    { "src": "^(?!/api/)(?!.*\\.(?:js|css|png|jpg|jpeg|svg|ico|json)$).*$", "dest": "/index.html" }
  ]
  
}
