# Copy this file to .env and fill in the values.
# For Vite use VITE_ prefix so they are available as import.meta.env.VITE_*

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# (Optional) GEMINI API Key for AI features
# GEMINI_API_KEY=your_gemini_api_key

# Secret for create-user API (client-side needs this to call the API)
VITE_CREATE_USER_SECRET=dev-secret-123

# On Vercel, set these values in Project Settings -> Environment Variables
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
CREATE_USER_SECRET=dev-secret-123  # Must match VITE_CREATE_USER_SECRET
DELETE_USER_SECRET=replace-with-generated-secret

# SendGrid (email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SEND_NOTIFICATION_SECRET=replace-with-generated-secret-for-endpoint
NOTIFICATIONS_FROM=no-reply@your-school.example
